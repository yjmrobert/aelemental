    Title: Form Field Form
    Description: Form is generated from .NET object model. Standard form annotations are used, few others have been added to handle labels, order, etc.
*@

<AeModelForm
    Model="@_formField"
    SubmitLabel="Save Changes"
    OnValidSubmit="@HandleValidSubmit"
    CancelLabel="Cancel"
    OnCancel="@CreateFormField"/>

<DebugObject Object="@_formField"/>

@code {

    private FormField _formField = new();

    private async Task<FormField> CreateFormField()
    {
        return new FormField();
    }

    protected override async Task OnInitializedAsync()
    {
        _formField = await CreateFormField();
    }

    private void HandleValidSubmit()
    {
    }

}
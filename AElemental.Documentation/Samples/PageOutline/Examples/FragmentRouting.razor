<a href="#p1">Link to Text 1</a>
<a href="#p2">Link to Text 2</a>
<a href="#p3">Link to Text 3</a>

@foreach (var value in Enumerable.Range(1, 3)) //Places text with Ids P1...P4
{
    <p id="p@(value)">Text @value</p>
    @foreach (var range in Enumerable.Range(1, 3)) // Adds spacing between <p> tags
    {
        <br>
    }
}
<AeFragmentRouting></AeFragmentRouting>
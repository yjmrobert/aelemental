<AeTypography>Selected item: @(string.Join(',', selected))</AeTypography>

<AeMultiSelect
    DefaultLabel="Please select a value"
    @bind-SelectedItems="selected"
    Items="_dropdownItems"
    MultiSelect="true"/>

@code {

    private SortedSet<string> selected;

    private List<string> _dropdownItems;

    protected override async Task OnInitializedAsync()
    {
        _dropdownItems = Enumerable.Range(1, 50).Select(r => Tools.NumberToWords(r)).ToList();
        selected = new SortedSet<string>(new[] {_dropdownItems[2]});
    }

}
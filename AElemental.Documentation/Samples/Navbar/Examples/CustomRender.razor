<AeNavbar Links="_navLinks" RightLinks="GetRightNavLinks()"/>


@code {

    private List<AeNavLink> _navLinks = new()
    {
        new()
        {
            To = "#",
            Label = "Home"
        },
        new()
        {
            To = "#",
            Label = "News"
        },
        new()
        {
            To = "#",
            Label = "Blog"
        }
    };


    private List<AeNavLink> GetRightNavLinks()
    {
        return new List<AeNavLink>
        {
            new()
            {
                CustomRender = (@<div class="custom-navlink">
                                    <AeButton>Click me!</AeButton>
                                </div>)
            },
            new()
            {
                To = "#",
                Label = "Contact"
            }
        };
    }

}
<AeTypography>Selected item: @selected</AeTypography>

<AeMultiSelect
    DefaultLabel="Please select a value"
    @bind-SelectedItem="selected"
    Items="_dropdownItems"/>

@code {

    private string selected = "Second";

    private List<string> _dropdownItems = new()
    {
        "First", "Second", "Third", "Fourth", "Fifth", "Sixth"
    };

}
    Title: Capturing input change
    Description: Use the OnInputChange to capture the input after a configurable delay (in ms)
*@

<AeTypography Variant="p">Default delay (500ms): @_defaultDelay</AeTypography>
<AeInput Placeholder="Search..." OnInputChange="HandleDefaultInputChange"/>

<AeTypography Variant="p">Custom delay (100ms): @_customDelay</AeTypography>
<AeInput Placeholder="Search..." OnInputChange="HandleCustomInputChange" EventTimer="100"/>

@code {

    private string _defaultDelay;
    private string _customDelay;

    private void HandleDefaultInputChange(string newValue)
    {
        _defaultDelay = newValue;
        StateHasChanged();
    }

    private void HandleCustomInputChange(string newValue)
    {
        _customDelay = newValue;
        StateHasChanged();
    }

}
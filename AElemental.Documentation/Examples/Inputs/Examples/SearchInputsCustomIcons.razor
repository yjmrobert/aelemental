    Title: Search Input with Icon overrides
    Description: You can specify which icon you want to put for the left and right icons in the search bar.
*@

<AeTypography>Search value (500ms delay): @_searchValue</AeTypography>

<AeSearchInput
    Placeholder="Search..."
    OnInputChange="HandleSearch"
    SearchIconFAClass="fas fa-birthday-cake"
    ClearIconFAClass="fas fa-coffee"/>


@code {

    private string _searchValue;

    private void HandleSearch(string newValue)
    {
        _searchValue = newValue;
        StateHasChanged();
    }

}
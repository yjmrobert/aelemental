<AeModelForm
    Model="@_starship"
    SubmitLabel="Save changes"
    OnValidSubmit="HandleValidSubmit"
    CancelLabel="Cancel"
    OnCancel="CreateStarship"
    LabelsOnTop
    Flexbox/>

<DebugObject Object="@_starship"/>

@code {

    private Starship2 _starship;

    private async Task<Starship2> CreateStarship()
    {
        return await Task.FromResult(new Starship2 {ProductionDate = DateTime.Today});
    }

    protected override async Task OnInitializedAsync()
    {
        _starship = await CreateStarship();
    }

    private void HandleValidSubmit()
    {
    //do something if form is valid
        StateHasChanged();
    }

}
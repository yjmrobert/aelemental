<AeTypography>Selection: @JsonSerializer.Serialize(_selectValue)</AeTypography>

<AeMultiSelect
    @bind-Value="_selectValue"
    HelperText="Optional helper text"
    LabelText="Multi Select"
    Placeholder="Optional placeholder text">

    <AeMultiSelectItem Value="foo">Foo</AeMultiSelectItem>
    <AeMultiSelectItem Value="bar">Bar</AeMultiSelectItem>
    <AeMultiSelectItem Value="baz">Baz</AeMultiSelectItem>
</AeMultiSelect>

@code {
    private List<string> _selectValue;
}
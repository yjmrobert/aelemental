@namespace AElemental.Components
@typeparam T
@inherits TreeView<T>

@if (Roots != null && Roots.Count() > 0)
{
    <ul class="ae tree-view">


        @foreach (var item in Roots)
        {
            <TreeItem T="T" FetchChildren="FetchChildren" Root="item" RenderItem="RenderItem" IsCollapsed="IsCollapsed" ToggleCollapsed="ToggleCollapsed"/>
        }
    </ul>
}

@code {

    [Parameter]
    public Func<T, RenderFragment> RenderItem { get; set; }

}